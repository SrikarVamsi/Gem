{
  "manifest_version": 3,
  "name": "Gem",
  "version": "0.1.0",
  "description": "Gem (Gemini): Verifies selected text with local MCP fact-checker",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": ["http://127.0.0.1:8080/*", "http://localhost:8080/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Gem",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
